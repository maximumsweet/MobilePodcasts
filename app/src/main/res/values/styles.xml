<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryDark">#f1f1f1</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorSecondary">@color/colorSecondary</item>
    </style>

    <style name="VKButtonPodcastEditing" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">44dp</item>
        <item name="android:layout_height">44dp</item>
    </style>

    <style name="VkBaseLayout">
        <item name="android:padding">@dimen/page_content_padding</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="VkMessageTitle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="fontWeight">500</item>
    </style>

    <style name="VkMessageSubtitle">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.01</item>
    </style>

    <style name="VkButtonFilled.TextAppearance">
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.01</item>
    </style>

    <style name="VkButtonFilled.Large.TextAppearance">
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">17sp</item>
        <item name="android:letterSpacing">-0.02</item>
    </style>

    <style name="VkButtonFilled" parent="Widget.MaterialComponents.Button">
        <item name="android:textAppearance">@style/VkButtonFilled.TextAppearance</item>
        <item name="backgroundTint">@color/colorSecondary</item>
        <item name="android:background">@drawable/vk_button_filled</item>
        <item name="android:paddingTop">@dimen/vk_button_vertical_padding</item>
        <item name="android:paddingBottom">@dimen/vk_button_vertical_padding</item>
        <item name="android:paddingStart">@dimen/vk_button_horizontal_padding</item>
        <item name="android:paddingEnd">@dimen/vk_button_horizontal_padding</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:foreground">?selectableItemBackground</item>
    </style>

    <style name="VkButtonFilled.Large" parent="VkButtonFilled">
        <item name="android:layout_height">44dp</item>
        <item name="android:textAppearance">@style/VkButtonFilled.Large.TextAppearance</item>
    </style>

    <style name="VkPodcastImagePreview">

    </style>

    <style name="VkPodcastPlayButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:src">@drawable/ic_play</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
    </style>

    <style name="VkSeparator">
        <item name="android:background">@color/vkSeparator</item>
    </style>

    <style name="VkPreviewBlockTitle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="fontWeight">500</item>
    </style>

    <style name="VkLink">
        <item name="android:textColor">@color/vkLink</item>
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

    <style name="VkTextSecondary">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

    <style name="VkTimeCodeTime">
        <item name="android:textColor">@color/vkLink</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.01</item>
    </style>

    <style name="VkTimeCodeDescription">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.01</item>
    </style>
    <style name="VkEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/vk_edit_text_background</item>
        <item name="android:padding">12dp</item>
        <item name="android:textColorHint">@color/vkEditTextHint</item>
    </style>

    <style name="VkFormHintTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="VkFormLinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="VkButtonOutlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/lightBlue</item>
        <item name="strokeColor">@color/colorSecondary</item>
        <item name="strokeWidth">1dp</item>
        <item name="cornerRadius">8dp</item>
        <item name="height">36dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:paddingTop">@dimen/vk_button_vertical_padding</item>
        <item name="android:paddingBottom">@dimen/vk_button_vertical_padding</item>
        <item name="android:paddingStart">@dimen/vk_button_horizontal_padding</item>
        <item name="android:paddingEnd">@dimen/vk_button_horizontal_padding</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:foreground">?selectableItemBackground</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="lineHeight">18sp</item>
    </style>

</resources>